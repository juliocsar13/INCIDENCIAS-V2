.modal.fade#registerDependenceModal(role="dialog")
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type='button',data-dismiss='modal') x
                h3.modal-title Registrar Dependencia
            .modal-body
                form.form-validate(action='/dependencias',method='post')
                    .row(style='padding:15px')
                        .col-md-6
                            .form-group
                                label.control-label() Nombre
                                input.required.form-control(type='text',name='nameDependence')
                        .col-md-6
                            
                            .form-group
                                label.control-label() Siglas
                                input.required.form-control(type='text',name='siglas')
                                
                        .col-md-12
                            button.btn.btn-success.pull-right(type='submit',style='margin-left:5px') Registrar
                            button.btn.btn-default.pull-right(type='button',data-dismiss='modal') Cancelar
        
