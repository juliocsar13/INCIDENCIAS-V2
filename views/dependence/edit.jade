.modal.fade#editDependenceModal(role="dialog")
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type='button',data-dismiss='modal') x
                h3.modal-title Editar Dependencia
            .modal-body
                form.form-validate(action='#')
                    .row(style='padding:15px')
                        .col-md-6
                            .form-group
                                label.control-label() Nombre
                                input.required#editNameDependence.form-control(type='text',name='nameDependence')
                                input#editIdDependence.form-control(type='hidden',name='id')
                        .col-md-6
                            .form-group
                                label.control-label() Siglas
                                input.required#editSiglasDependence.form-control(type='text',name='siglas')
                                    

                        .col-md-12
                            button#btnEditSubmitDependences_.btn.btn-success.pull-right(type='submit',style='margin-left:5px') 
                                i.fa.fa-save
                                    |  Guardar
                            button.btn.btn-default.pull-right(type='button',data-dismiss='modal') Cancelar
